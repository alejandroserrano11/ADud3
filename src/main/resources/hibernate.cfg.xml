<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- Configuración de la base de datos (asegúrate de que estos valores sean correctos) -->
		<property name="hibernate.connection.driver_class">
			com.mysql.cj.jdbc.Driver
		</property>
		<property name="hibernate.connection.url">
			jdbc:mysql://localhost:3306/caso1ud3
		</property>
		<property name="hibernate.connection.username">
			root
		</property>
		<property name="hibernate.connection.password">

		</property>
		<!-- Dialecto de la base de datos -->
		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<!-- Mostrar SQL en consola -->
		<property name="hibernate.show_sql">
			false
		</property>
		<!-- Configuración de la estrategia de generación de tablas -->
		<property name="hibernate.hbm2ddl.auto">
			update
		</property>
		<!-- Mapeo de la clase Book -->
		<mapping class="com.cesur.Alumno" />
	</session-factory>
</hibernate-configuration>